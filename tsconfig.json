{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "declaration": true,
      "declarationDir": "./dist/types",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  